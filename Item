public class Item {
    private int ID;
    private String name;
    public Item(int ID, String name) {
        this.ID = ID;
        this.name = name;
    }
    public void show(){
        System.out.println(name);
    }
    @Override
    public String toString() {
        return "Item{" +
                "ID=" + ID +
                ", name='" + name + '\'' +
                '}';
    }

    public int getID() {
        return ID;
    }

    public String getName() {
        return name;
    }
}
